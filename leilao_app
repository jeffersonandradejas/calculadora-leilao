import streamlit as st
import pandas as pd

st.set_page_config(page_title="Calculadora de LeilÃ£o", layout="centered")

st.title("ğŸ“Š Calculadora de LeilÃ£o")

st.markdown("""
Esta calculadora estima os custos e lucros envolvidos na venda de um item em leilÃ£o.

Preencha os campos abaixo com os valores do item e veja o resultado!
""")

# Entradas do usuÃ¡rio
preco_venda = st.number_input("ğŸ’° PreÃ§o de venda do item no leilÃ£o (R$)", min_value=0.0, step=100.0)
comissao = st.slider("ğŸ“ ComissÃ£o da leiloeira (%)", min_value=0, max_value=30, value=10)
taxa_admin = st.number_input("ğŸ§¾ Taxa administrativa (R$)", min_value=0.0, step=10.0)
outros_custos = st.number_input("ğŸ› ï¸ Outros custos (R$)", min_value=0.0, step=10.0)

# CÃ¡lculo
valor_comissao = preco_venda * (comissao / 100)
lucro_liquido = preco_venda - valor_comissao - taxa_admin - outros_custos

# Resultado
st.subheader("ğŸ“Œ Resultado")
st.write(f"ComissÃ£o: R$ {valor_comissao:,.2f}")
st.write(f"Lucro lÃ­quido: **R$ {lucro_liquido:,.2f}**")

# Tabela resumo
df = pd.DataFrame({
    'DescriÃ§Ã£o': ['PreÃ§o de venda', 'ComissÃ£o (%)', 'Taxa administrativa', 'Outros custos', 'Lucro lÃ­quido'],
    'Valor (R$)': [preco_venda, comissao, taxa_admin, outros_custos, lucro_liquido]
})
st.table(df)

st.markdown("---")
st.caption("Desenvolvido por Jefferson â€¢ VersÃ£o 1.0 ğŸš€")
